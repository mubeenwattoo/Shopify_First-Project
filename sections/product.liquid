{% comment %}
  This section is used in the product template to render product page with
  media, content, and add-to-cart form.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/product
{% endcomment %}

{% assign store_root = shop.permanent_domain | prepend: 'https://' %}
<div class="product-page-section" data-store-root="{{ store_root }}">
<div class="product-images">
  {% for image in product.images %}
    {% render 'image', class: 'product-image', image: image %}
  {% endfor %}
</div>

<div class="product-info">
  <h1>{{ product.title }}</h1>
  <p>{{ product.price | money }}</p>
  <p>{{ product.description }}</p>
</div>

<div class="product-form">
  {% form 'product', product, class: 'product-form-ajax' %}
    {% assign current_variant = product.selected_or_first_available_variant %}

    <select name="id">
      {% for variant in product.variants %}
        <option
          value="{{ variant.id }}"
          {% if variant == current_variant %}
            selected="selected"
          {% endif %}
        >
          {{ variant.title }} - {{ variant.price | money }}
        </option>
      {% endfor %}
    </select>

    <input type="number" name="quantity" min="1" value="1">

    <button type="submit" class="add-to-cart-btn">Add to cart</button>
    {{ form | payment_button }}
  {% endform %}
</div>
</div>

<script>
(function() {
  var section = document.querySelector('.product-page-section');
  if (!section) return;
  var form = section.querySelector('.product-form-ajax');
  if (!form) return;
  form.addEventListener('submit', function(e) {
    e.preventDefault();
    var btn = form.querySelector('.add-to-cart-btn');
    if (btn) { btn.disabled = true; btn.textContent = 'Addingâ€¦'; }
    var action = (form.getAttribute('action') || '').replace(/^https?:\/\/[^/]+/, '') || '/cart/add';
    if (!action.startsWith('/')) action = '/' + action;
    fetch(action, {
      method: 'POST',
      body: new FormData(form),
      credentials: 'same-origin',
      redirect: 'follow'
    }).then(function() {
      var isLocal = /^127\.0\.0\.1$|^localhost$/i.test(window.location.hostname);
      var storeRoot = section.getAttribute('data-store-root');
      if (isLocal && storeRoot) {
        window.location.href = storeRoot + '/cart';
      } else {
        window.location.href = '/cart';
      }
    }).catch(function() {
      var isLocal = /^127\.0\.0\.1$|^localhost$/i.test(window.location.hostname);
      var storeRoot = section.getAttribute('data-store-root');
      if (isLocal && storeRoot) {
        window.location.href = storeRoot + '/cart';
      } else {
        window.location.href = '/cart';
      }
    });
  });
})();
</script>

{% schema %}
{
  "name": "t:general.product",
  "settings": [],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
